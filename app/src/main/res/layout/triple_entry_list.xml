<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="8dp"
    android:background="@color/panafrica_blue">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/imgPlaceHolder"
            android:layout_width="8dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:maxHeight="100dp"
            android:maxWidth="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="sans-serif"
                android:text="Airtime"
                android:textColor="@color/apptheme_text_white"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/teItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:text="TextView"
                android:textColor="@color/panafrica_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/teItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:text="New Text"
                android:textColor="@color/panafrica_grey"
                android:textSize="16dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>