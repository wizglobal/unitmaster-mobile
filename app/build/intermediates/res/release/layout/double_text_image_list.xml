<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:layout_marginBottom="8dp"
    android:background="@color/panafrica_blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        >

        <ImageView
            android:id="@+id/qeImage"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:maxHeight="58dp"
            android:maxWidth="8dp"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/imgPlaceHolder"
            android:layout_width="8dp"
            android:layout_height="58dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="false"
            android:background="@color/panafrica_blue"
            android:maxHeight="58dp"
            android:maxWidth="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/qeImage"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qeItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Airtime"
                android:textColor="@color/apptheme_text_white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/qeItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textColor="@color/panafrica_grey"
                android:text="TextView"
                android:textSize="18sp" />

        </LinearLayout>


    </RelativeLayout>


</LinearLayout><!-- From: file:/home/tiberius/Dropbox/My%20Projects/Android%20Projects/WizGlobal-Android/app/src/main/res/layout/double_text_image_list.xml -->