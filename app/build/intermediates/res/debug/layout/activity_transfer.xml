<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/panafrica_blue">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:text="@string/lblAccountNo"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/apptheme_text_white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTransAccNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/panafrica_grey"
        android:text="New Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:text="@string/lblAccountBalance"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/apptheme_text_white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTransBal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/panafrica_grey"
        android:text="New Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/accountSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:background="#ffffff"
        android:prompt="@string/transferPrompt"/>

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/txtTransAmount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:layout_margin="8dp"
        android:gravity="left|center_vertical"
        android:hint="@string/hintSellAmount"
        android:inputType="phone|number"
        bootstrap:be_roundedCorners="true" />


        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnSubmitTrans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:onClick="executeTransfer"
            android:text="@string/btnSubmit"
            android:textAlignment="center"
            bootstrap:bb_icon_right="fa-check-circle"
            bootstrap:bb_type="default" />


</LinearLayout><!-- From: file:/Users/zack/wizglobal/wiz_global_android/app/src/main/res/layout/activity_transfer.xml -->