<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="30dp">

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/txtExistingPass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="left|center_vertical"
        android:hint="@string/hintExistingPass"
        android:inputType="textPassword"
        bootstrap:be_roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/txtNewPass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="left|center_vertical"
        android:hint="@string/hintNewPass"
        android:inputType="textPassword"
        bootstrap:be_roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/txtConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="left|center_vertical"
        android:hint="@string/hintConfirmPass"
        android:inputType="textPassword"
        android:paddingBottom="5dp"
        bootstrap:be_roundedCorners="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:onClick="changePass"
            android:text="@string/btnSubmit"
            android:textAlignment="center"
            bootstrap:bb_icon_right="fa-check-circle"
            bootstrap:bb_type="primary"/>
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/zack/wizglobal/wiz_global_android/app/src/main/res/layout/activity_change_password.xml -->